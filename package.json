{
  "name": "dreibein",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "dev:both": "npm run generate && concurrently 'npm run dev:*'",
    "dev:nuxt": "nuxt dev",
    "dev:pocketbase": "cd ./db && go run ./main.go serve",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build:local": "npm run generate && cd ./db && go build -o dreibein main.go",
    "build:linux": "npm run generate && cd ./db && GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go build"
  },
  "dependencies": {
    "@nuxt/ui": "^4.4.0",
    "nuxt": "^4.3.0",
    "pocketbase-nuxt": "^0.0.3",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "concurrently": "^9.2.1"
  }
}
